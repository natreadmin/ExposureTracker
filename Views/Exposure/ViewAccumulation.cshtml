@model IEnumerable<Basic>
@{
    ViewData ["Title"] = "ViewDetails";


}


<div class="container">
    <div class="row">
        <div class="col-sm-6 ml-0 label-align-left">
            <h2>Name : @ViewBag.FullName</h2>
        </div>
        <div class="col-sm-6 ml-0 label-align-right">
            <a class="btn btn-primary" asp-controller="Exposure" asp-action="ViewPolicies" asp-route-Identifier="@ViewBag.Identifier"><i class="fas fa-arrow-right"></i> View Policies: <b> @ViewBag.TotalPolicy</b></a>
            <a class="btn btn-light" asp-controller="Exposure" asp-action="Index"><i class="fa fa-home"></i>Return to Main Page</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <h2>Date of Birth : @ViewBag.DateofBirth</h2>
        </div>
    </div>


    <div class="row">
        <div class="col-sm-6 ml-0 label-align-left">

        </div>
    </div>

    <div class="table-responsive-md mb-1 mt-5">
        <table class="table table-striped table-hover table-bordered" id="basic-datatables" cellspacing="0">
            <thead class="bg-dark text-light">
                <tr>
                    <th>InsuredProd</th>
                    <th>Basic/Rider</th>
                    <th>Sum Assured/Face Amount</th>
                    <th>Reinsured Net Amount At Risk</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in (List<Basic>) ViewData ["BASIC"])
                {
                    <tr>
                        <td>@item.insuredprod</td>
                        <td>@item.basic</td>
                        <td>@item.basictotalsumassured</td>
                        <td>@item.basictotalNAR</td>
                    </tr>
                }

                @foreach(var item in (List<Rider_ADB>) ViewData ["RIDER_ADB"])
                {
                    <tr>
                        <td>@item.insuredprod_adbind</td>
                        <td>@item.rider</td>
                        <td>@item.riderTotalsumassured_adbind</td>
                        <td>@item.riderTotal_NAR_adbind</td>
                    </tr>
                }
                @foreach(var item in (List<Rider_SPLA>) ViewData ["RIDER_SPLA"])
                {
                    <tr>
                        <td>@item.insuredprod_spladbind</td>
                        <td>@item.rider</td>
                        <td>@item.riderTotalsumassured_spladbind</td>
                        <td>@item.riderTotal_NAR_spladbind</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>


    <div class="row">
        <div class="col mr-3 label-align-right"
            <h2>Total Sum Assured:  @ViewBag.TotalBaseFaceAmount</h2>
        </div>
    </div>
    <div class="row">
        <div class="col mr-3 label-align-right"
            <h2>Total Net Amount:  @ViewBag.TotalBaseNetAmountAtRisk</h2>
        </div>
    </div>
</div>





<script>
    $('#basic-datatables').DataTable({
        searching: false,
        paging: false,
        info: false,
        "iDisplayLength": -1,
        "aaSorting": [[0, "desc"]],
        "oLanguage": {
            "sEmptyTable": "0 Record for Base"
        }

    });

    $('#basic-datatables_rider').DataTable({
        searching: false,
        paging: true,
        info: false,
        "iDisplayLength": -1,
        "aaSorting": [[0, "desc"]],
        "oLanguage": {
            "sEmptyTable": "0 Record for BASIC"
        }

    });

</script>
